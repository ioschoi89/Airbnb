<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.android.airbnb.main.registerrooms.basic.HostRoomsRegisterBasicBedDetailFragment">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintVertical_bias="1.0">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <android.support.constraint.ConstraintLayout
                android:id="@+id/layoutDescription"
                android:layout_width="0dp"
                android:layout_height="340dp"
                android:background="@color/white"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layoutTitle">


                <ImageButton
                    android:id="@+id/ImgBtnSingleMinus"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/circle_minus"
                    app:layout_constraintRight_toLeftOf="@+id/txtSingleResult"
                    app:layout_constraintTop_toTopOf="@+id/txtSingleTitle" />

                <TextView
                    android:id="@+id/txtSingleResult"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="0dp"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    app:layout_constraintRight_toLeftOf="@+id/ImgBtnSinglePlus"
                    app:layout_constraintTop_toTopOf="@+id/txtSingleTitle" />

                <ImageButton
                    android:id="@+id/ImgBtnSinglePlus"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="32dp"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/circle_plus"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/txtSingleTitle" />

                <TextView
                    android:id="@+id/txtSingleTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="32dp"
                    android:text="싱글"
                    android:textColor="@android:color/black"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtDoubleTitle" />

                <ImageButton
                    android:id="@+id/ImgBtnDoubleMinus"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/circle_minus"
                    app:layout_constraintRight_toLeftOf="@+id/txtDoubleResult"
                    app:layout_constraintTop_toTopOf="@+id/txtDoubleTitle" />

                <TextView
                    android:id="@+id/txtDoubleResult"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="0dp"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    app:layout_constraintRight_toLeftOf="@+id/ImgBtnDoublePlus"
                    app:layout_constraintTop_toTopOf="@+id/txtDoubleTitle" />

                <ImageButton
                    android:id="@+id/ImgBtnDoublePlus"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/circle_plus"
                    android:layout_marginRight="32dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/txtDoubleTitle"
                    android:layout_marginTop="0dp" />

                <TextView
                    android:id="@+id/txtDoubleTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="32dp"
                    android:text="더블"
                    android:textColor="@android:color/black"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtQueenTitle" />

                <TextView
                    android:id="@+id/txtQueenResult"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="0dp"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    app:layout_constraintRight_toLeftOf="@+id/ImgBtnQueenPlus"
                    app:layout_constraintTop_toTopOf="@+id/txtQueenTitle" />

                <ImageButton
                    android:id="@+id/ImgBtnQueenMinus"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/circle_minus"
                    app:layout_constraintRight_toLeftOf="@+id/txtQueenResult"
                    app:layout_constraintTop_toTopOf="@+id/txtQueenTitle" />

                <ImageButton
                    android:id="@+id/ImgBtnQueenPlus"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="32dp"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/circle_plus"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/txtQueenTitle" />

                <TextView
                    android:id="@+id/txtQueenTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="32dp"
                    android:text="퀸"
                    android:textColor="@android:color/black"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtKingTitle" />

                <TextView
                    android:id="@+id/txtKingResult"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    app:layout_constraintRight_toLeftOf="@+id/ImgBtnKingPlus"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:id="@+id/ImgBtnKingMinus"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="17dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/circle_minus"
                    app:layout_constraintRight_toLeftOf="@+id/txtKingResult"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:id="@+id/ImgBtnKingPlus"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/circle_plus"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="32dp"
                    app:layout_constraintRight_toRightOf="parent" />

                <ImageButton
                    android:id="@+id/ImgBtnSave"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginRight="32dp"
                    android:background="@drawable/save"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent" />

                <TextView
                    android:id="@+id/txtKingTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="16dp"
                    android:text="킹"
                    android:textColor="@android:color/black"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </android.support.constraint.ConstraintLayout>


            <android.support.constraint.ConstraintLayout
                android:id="@+id/layoutTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/white"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageButton
                    android:id="@+id/ImgBtnCancel"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="24dp"
                    android:background="@drawable/cancel_black"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/txtTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="50dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="30dp"
                    android:text="공용 공간"
                    android:textColor="@color/black"
                    android:textSize="36sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ImgBtnCancel" />

            </android.support.constraint.ConstraintLayout>
        </android.support.constraint.ConstraintLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
